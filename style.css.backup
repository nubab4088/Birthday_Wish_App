  transform-style: preserve-3d;
  will-change: transform, filter, z-index;
}

@keyframes photoEntrance {
  0% {
    opacity: 0;
    transform: translateY(80px) scale(0.6) rotate(0deg);
  }
  100% {
    opacity: 1;
  }
}

.photo-frame:hover {
