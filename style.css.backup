  transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) !important;
}

.photo-frame--1 {
  left: calc(50% - 420px);
  top: calc(50% - 30px);
  transform: translateZ(-20px) rotateY(15deg) rotate(-6deg) scale(0.95);
  animation-delay: 0.3s;
}

/* Front-left photo */
.photo-frame--2 {
  left: calc(50% - 300px);
  top: calc(50% + 60px);
  transform: translateZ(15px) rotateY(8deg) rotate(-3deg);
  animation-delay: 0.5s;
}

/* Front-right photo */
.photo-frame--3 {
  right: calc(50% - 300px);
  top: calc(50% + 60px);
  transform: translateZ(15px) rotateY(-8deg) rotate(3deg);
  animation-delay: 0.7s;
}

