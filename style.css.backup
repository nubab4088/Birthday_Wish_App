  }
  100% {
    transform: translateY(-110vh) translateX(30px);
    opacity: 0;
  }
}

/* Cityscape with enhanced twinkling stars */
.cityscape::before {
  content: '';
  position: absolute;
  inset: 0;
  background-image: 
    radial-gradient(circle at 10% 18%, rgba(255, 255, 255, 0.9) 1.2px, transparent 1.2px),
    radial-gradient(circle at 25% 12%, rgba(255, 255, 255, 0.7) 0.8px, transparent 0.8px),
    radial-gradient(circle at 45% 8%, rgba(255, 255, 255, 0.85) 1px, transparent 1px),
    radial-gradient(circle at 62% 15%, rgba(255, 255, 255, 0.6) 0.9px, transparent 0.9px),
    radial-gradient(circle at 78% 10%, rgba(255, 255, 255, 0.75) 1.1px, transparent 1.1px),
    radial-gradient(circle at 88% 20%, rgba(255, 255, 255, 0.65) 0.8px, transparent 0.8px),
    radial-gradient(circle at 15% 25%, rgba(255, 255, 255, 0.55) 0.7px, transparent 0.7px),
    radial-gradient(circle at 92% 5%, rgba(255, 255, 255, 0.8) 1px, transparent 1px);
  animation: twinkleStars 5s ease-in-out infinite;
  z-index: 2;
}

@keyframes twinkleStars {
  0%, 100% {
    opacity: 0.4;
  }
  25% {
    opacity: 0.8;
  }
  50% {
    opacity: 1;
  }
  75% {
    opacity: 0.6;
  }
}

/* Add soft vignette overlay */
.table-scene::before {
  content: '';
  position: absolute;
  inset: 0;
  background: radial-gradient(circle at center, transparent 30%, rgba(0, 0, 0, 0.3) 100%);
  pointer-events: none;
  z-index: 1;
}

