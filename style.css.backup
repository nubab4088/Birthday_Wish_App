:root {
  color-scheme: dark;
  --bg-dark: #0a0a0f;
  --bg-initial: #1a1a2e;
  --text-glow: #ffd700;
  --text-glow-strong: #ff6b6b;
  --cake-orange: #ff8c42;
  --cake-orange-light: #ffb366;
  --cake-orange-dark: #e6732a;
  --icing-pink: #ffb3d9;
  --icing-pink-light: #ffd9ec;
  --candle-yellow: #ffd700;
  --candle-flame: #ff6b00;
  --table-purple: #6b5b95;
  --table-white: #f5f5f5;
  --city-bg: #0d1421;
  --frame-wood: #8b6914;
  --strawberry: #ff1744;
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  margin: 0;
  min-height: 100vh;
  overflow: hidden;
  font-family: 'Kalam', 'Poppins', system-ui, sans-serif;
  position: relative;
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Screen Management */
.screen {
  position: fixed;
  inset: 0;
  width: 100vw;
  height: 100vh;
  transition: opacity 0.8s ease, transform 0.8s ease;
}

.screen[hidden] {
  display: none;
}

/* ============================================
   INITIAL SCREEN (Image 4 Style)
   ============================================ */
.screen--initial {
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  padding: 2rem;
}

/* Split layout: left (photo + text) and right (cake) */
.initial-layout {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  max-width: 1100px;
  gap: 4rem;
  margin: 0 auto;
  padding: 0 2rem;
}

.initial-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 1.8rem;
  text-align: center;
  max-width: 550px;
}

.initial-right {
  flex: 0 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* Modern gift card style photo frame - smaller size */
.initial-photo-card {
  position: relative;
  width: 180px;
  height: 220px;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 
    0 15px 40px rgba(0, 0, 0, 0.5),
    0 0 0 1px rgba(255, 255, 255, 0.1),
    inset 0 0 30px rgba(255, 255, 255, 0.05);
  transform: rotate(-2deg);
  transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  animation: photoFloat 6s ease-in-out infinite;
  background: linear-gradient(145deg, rgba(255,255,255,0.1), rgba(255,255,255,0.05));
  backdrop-filter: blur(10px);
}

.initial-photo-card:hover {
  transform: rotate(0deg) scale(1.05);
}

@keyframes photoFloat {
  0%, 100% {
    transform: rotate(-2deg) translateY(0);
  }
  50% {
    transform: rotate(-2deg) translateY(-10px);
  }
}

.initial-photo {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  position: relative;
  z-index: 1;
}

/* Glossy shine effect on photo card */
.photo-card-shine {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0) 0%,
    rgba(255, 255, 255, 0.08) 45%,
    rgba(255, 255, 255, 0.15) 50%,
    rgba(255, 255, 255, 0.08) 55%,
    rgba(255, 255, 255, 0) 100%
  );
  transform: translateX(-100%);
  animation: shineSlide 3s ease-in-out infinite;
  pointer-events: none;
  z-index: 2;
}

@keyframes shineSlide {
  0%, 100% {
    transform: translateX(-100%) skewX(-15deg);
  }
  50% {
    transform: translateX(200%) skewX(-15deg);
  }
}

/* Modern card border decoration */
.initial-photo-card::before {
  content: '';
  position: absolute;
  inset: -3px;
  border-radius: 16px;
  background: linear-gradient(45deg, #ff6b6b, #ffd700, #4ecdc4, #ff6b6b);
  background-size: 300% 300%;
  animation: gradientBorder 4s ease infinite;
  z-index: 0;
  opacity: 0.6;
  filter: blur(6px);
}

@keyframes gradientBorder {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

/* Text content container */
.initial-text-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  width: 100%;
}

.initial-content {
  text-align: center;
  padding: 2rem;
  max-width: 90%;
  width: 100%;
  animation: fadeInUp 1s ease;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.handwritten-title {
  font-family: 'Kalam', cursive;
  font-size: clamp(2.2rem, 4.5vw, 3.5rem);
  color: var(--text-glow);
  text-shadow: 
    0 0 20px var(--text-glow),
    0 0 40px var(--text-glow),
    0 0 60px var(--text-glow-strong);
  margin-bottom: 0.5rem;
  animation: glowPulse 2s ease-in-out infinite;
  transform: rotate(-1deg);
  line-height: 1.2;
  word-wrap: break-word;
  white-space: nowrap;
}

@keyframes glowPulse {
  0%, 100% {
    text-shadow: 
      0 0 20px var(--text-glow),
      0 0 40px var(--text-glow),
      0 0 60px var(--text-glow-strong);
  }
  50% {
    text-shadow: 
      0 0 30px var(--text-glow),
      0 0 60px var(--text-glow),
      0 0 90px var(--text-glow-strong);
  }
}

.handwritten-instruction {
  font-family: 'Kalam', cursive;
  font-size: clamp(1.4rem, 2.8vw, 2rem);
  color: #fff;
  margin: 0.8rem 0;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  transform: rotate(0.5deg);
}

.handwritten-note {
  font-family: 'Kalam', cursive;
  font-size: clamp(1.05rem, 2.2vw, 1.4rem);
  color: rgba(255, 255, 255, 0.8);
  margin-top: 0.5rem;
  font-style: italic;
  transform: rotate(-0.5deg);
  line-height: 1.6;
  cursor: default;
  transition: color 0.3s ease;
}

.handwritten-note:hover {
  color: rgba(255, 255, 255, 0.8);
}

/* Pixel Art Cake - positioned on right side */
.pixel-cake-container {
  cursor: pointer;
  transition: transform 0.3s ease;
  filter: drop-shadow(0 10px 30px rgba(255, 140, 66, 0.4));
  animation: cakeGlow 2s ease-in-out infinite;
}

@keyframes cakeGlow {
  0%, 100% {
    filter: drop-shadow(0 10px 30px rgba(255, 140, 66, 0.4));
  }
  50% {
    filter: drop-shadow(0 15px 40px rgba(255, 140, 66, 0.7));
  }
}

.pixel-cake-container:hover {
  transform: scale(1.08);
}

.pixel-cake-container:active {
  transform: scale(0.95);
}

.pixel-cake {
  position: relative;
  width: 200px;
  height: 240px;
  margin: 0 auto;
}

.pixel-cake__tier {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 8px;
  box-shadow: 
    inset 0 -8px 0 rgba(0, 0, 0, 0.2),
    0 8px 16px rgba(0, 0, 0, 0.3);
}

.pixel-cake__tier--bottom {
  bottom: 0;
  width: 180px;
  height: 80px;
  background: linear-gradient(180deg, var(--cake-orange-light) 0%, var(--cake-orange) 50%, var(--cake-orange-dark) 100%);
}

.pixel-cake__tier--middle {
  bottom: 70px;
  width: 150px;
  height: 70px;
  background: linear-gradient(180deg, var(--cake-orange-light) 0%, var(--cake-orange) 50%, var(--cake-orange-dark) 100%);
}

.pixel-cake__tier--top {
  bottom: 130px;
  width: 120px;
  height: 60px;
  background: linear-gradient(180deg, var(--cake-orange-light) 0%, var(--cake-orange) 50%, var(--cake-orange-dark) 100%);
}

.pixel-cake__tier--top::before {
  content: '';
  position: absolute;
  top: -15px;
  left: -5px;
  right: -5px;
  height: 20px;
  background: linear-gradient(135deg, var(--icing-pink-light) 0%, var(--icing-pink) 100%);
  border-radius: 8px 8px 0 0;
  box-shadow: 0 -4px 8px rgba(255, 179, 217, 0.3);
}

.pixel-cake__candle {
  position: absolute;
  top: -40px;
  left: 50%;
  transform: translateX(-50%);
  width: 12px;
  height: 50px;
  background: repeating-linear-gradient(
    90deg,
    #fff 0px,
    #fff 4px,
    #ff6b6b 4px,
    #ff6b6b 8px
  );
  border-radius: 6px;
  z-index: 2;
}

.pixel-candle__flame {
  position: absolute;
  top: -20px;
  left: 50%;
  transform: translateX(-50%);
  width: 16px;
  height: 24px;
  background: radial-gradient(circle at 50% 20%, #fff 0%, var(--candle-yellow) 40%, var(--candle-flame) 100%);
  border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
  animation: flicker 1.2s ease-in-out infinite;
  box-shadow: 0 0 15px var(--candle-yellow), 0 0 30px var(--candle-flame);
}

@keyframes flicker {
  0%, 100% {
    transform: translateX(-50%) rotate(-2deg) scale(1);
  }
  25% {
    transform: translateX(-50%) rotate(3deg) scale(0.95);
  }
  50% {
    transform: translateX(-50%) rotate(-1deg) scale(1.05);
  }
  75% {
    transform: translateX(-50%) rotate(2deg) scale(0.98);
  }
}

.button {
  border: none;
  border-radius: 999px;
  padding: 1rem 2.5rem;
  font-size: 1.1rem;
  font-weight: 600;
  font-family: 'Kalam', cursive;
  color: #1a1a2e;
  background: linear-gradient(135deg, var(--text-glow) 0%, #ffa500 100%);
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 8px 25px rgba(255, 215, 0, 0.4);
  margin-top: 2rem;
}

.button:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 35px rgba(255, 215, 0, 0.6);
}

.button:active {
  transform: translateY(0);
}

.button--hidden {
  opacity: 0;
  pointer-events: none;
}

.volume-indicator {
  position: fixed;
  bottom: 2.5rem;
  left: 50%;
  transform: translateX(-50%);
  display: grid;
  gap: 1rem;
  z-index: 25;
  max-width: 550px;
  width: 90%;
  animation: slideUpFade 0.5s ease-out forwards;
}

@keyframes slideUpFade {
  from {
    opacity: 0;
    transform: translateX(-50%) translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
}

.volume-bar {
  width: 100%;
  max-width: 550px;
  margin: 0 auto;
  height: 14px;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 999px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.volume-fill {
  height: 100%;
  width: 0%;
  background: linear-gradient(90deg, #60a5fa, #34d399, var(--candle-yellow), #ff8fab, #ff3f81);
  border-radius: 999px;
  transition: width 0.1s ease;
  box-shadow: 0 0 20px rgba(255, 215, 0, 0.8);
}

.volume-text {
  margin: 0;
  font-size: 1.25rem;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.98);
  text-shadow: 0 2px 12px rgba(0, 0, 0, 0.7);
  text-align: center;
  font-family: 'Kalam', cursive;
  letter-spacing: 0.3px;
}

.initial-right .volume-text,
.initial-right .handwritten-instruction {
  font-family: 'Kalam', cursive;
  font-size: clamp(0.95rem, 2vw, 1.2rem);
  color: rgba(255, 255, 255, 0.85);
  text-align: center;
  margin: 0;
  text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
}

.photo-frame__photo {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 10px;
  background: #1a1a1a;
  box-shadow: 
    inset 0 0 30px rgba(0, 0, 0, 0.6),
    inset 0 2px 8px rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}

.photo-frame__photo img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  object-position: center;
  display: block;
  opacity: 1;
  transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1), filter 0.3s ease;
}

/* Photo Frame Hover Effects */
.photo-frame {
  transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1), box-shadow 0.4s ease;
  cursor: pointer;
}

.photo-frame:hover {
  transform: scale(1.15) rotate(2deg);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  z-index: 10;
}

.photo-frame:hover .photo-frame__photo img {
  transform: scale(1.05);
}

/* Enhanced 3D Cake Styling */
.cake-3d__layer {
  position: relative;
  overflow: visible;
}

/* Frosting on layers */
.layer-frosting {
  position: absolute;
  top: -8px;
  left: -5px;
  right: -5px;
  height: 15px;
  background: linear-gradient(180deg, #fff5f5 0%, #ffe4e4 100%);
  border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
  box-shadow: 0 2px 10px rgba(255, 182, 193, 0.5);
}

/* Sprinkles on bottom layer */
.layer-sprinkles {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 100%;
}

.sprinkle {
  position: absolute;
  width: 3px;
  height: 8px;
  border-radius: 2px;
  animation: sparkle 2s infinite;
}

.sprinkle:nth-child(1) { background: #ff6b9d; top: 20%; left: 15%; }
.sprinkle:nth-child(2) { background: #ffd93d; top: 40%; left: 30%; }
.sprinkle:nth-child(3) { background: #6bcfff; top: 60%; left: 50%; }
.sprinkle:nth-child(4) { background: #ff6b9d; top: 35%; left: 70%; }
.sprinkle:nth-child(5) { background: #a8e6cf; top: 55%; left: 85%; }
.sprinkle:nth-child(6) { background: #ffd93d; top: 25%; left: 45%; }

/* Chocolate drips on middle layer */
.layer-chocolate-drip {
  position: absolute;
  top: -5px;
  width: 20px;
  height: 25px;
  background: linear-gradient(180deg, #8b4513 0%, #654321 100%);
  border-radius: 0 0 50% 50%;
  animation: drip 3s ease-in-out infinite;
}

.drip-1 { left: 10%; animation-delay: 0s; }
.drip-2 { left: 35%; animation-delay: 0.5s; height: 30px; }
.drip-3 { left: 60%; animation-delay: 1s; height: 20px; }
.drip-4 { left: 85%; animation-delay: 1.5s; height: 28px; }

@keyframes drip {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(3px); }
}

/* Decorative roses */
.decoration-rose {
  position: absolute;
  width: 25px;
  height: 25px;
  background: radial-gradient(circle, #ff69b4 0%, #ff1493 100%);
  border-radius: 50% 50% 50% 0;
  transform: rotate(-45deg);
  box-shadow: 0 2px 8px rgba(255, 105, 180, 0.6);
  animation: bloom 3s ease-in-out infinite;
}

.decoration-rose::before {
  content: '';
  position: absolute;
  width: 15px;
  height: 15px;
  background: #ff85c1;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.rose-1 { top: -15px; left: 20%; animation-delay: 0s; }
.rose-2 { top: -10px; left: 50%; animation-delay: 0.5s; transform: rotate(-45deg) scale(0.9); }
.rose-3 { top: -15px; right: 20%; animation-delay: 1s; }

@keyframes bloom {
  0%, 100% { transform: rotate(-45deg) scale(1); }
  50% { transform: rotate(-45deg) scale(1.1); }
}

/* Berries */
.decoration-berry {
  position: absolute;
  width: 15px;
  height: 15px;
  background: radial-gradient(circle at 30% 30%, #ff4444, #cc0000);
  border-radius: 50%;
  box-shadow: 0 2px 6px rgba(255, 68, 68, 0.5);
}

.decoration-berry::after {
  content: '';
  position: absolute;
  top: -5px;
  left: 50%;
  width: 8px;
  height: 6px;
  background: #228b22;
  border-radius: 50% 50% 0 0;
  transform: translateX(-50%);
}

.berry-1 { top: -8px; left: 35%; }
.berry-2 { top: -5px; right: 35%; }
.berry-3 { top: -10px; left: 50%; transform: translateX(-50%); }

/* Enhanced decorative sticks */
.cake-3d__sticks {
  position: absolute;
  top: -80px;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  pointer-events: none;
}

.stick {
  position: absolute;
  width: 4px;
  background: linear-gradient(180deg, #ffd700 0%, #ffed4e 100%);
  border-radius: 2px;
  box-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
  animation: sway 3s ease-in-out infinite;
}

.stick--1 { 
  height: 100px; 
  left: 30%; 
  transform: translateX(-50%) rotate(-8deg);
  animation-delay: 0s;
}

.stick--2 { 
  height: 120px; 
  left: 50%; 
  transform: translateX(-50%);
  animation-delay: 0.5s;
}

.stick--3 { 
  height: 95px; 
  left: 70%; 
  transform: translateX(-50%) rotate(8deg);
  animation-delay: 1s;
}

@keyframes sway {
  0%, 100% { transform: translateX(-50%) rotate(var(--rotate, 0deg)); }
  50% { transform: translateX(-50%) rotate(calc(var(--rotate, 0deg) + 5deg)); }
}

/* Stick decorations */
.stick-star,
.stick-heart,
.stick-circle {
  position: absolute;
  top: -20px;
  left: 50%;
  transform: translateX(-50%);
  animation: twinkle 2s ease-in-out infinite;
}

.stick-star {
  width: 0;
  height: 0;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-bottom: 17px solid #ffd700;
}

.stick-star::after {
  content: '';
  position: absolute;
  width: 0;
  height: 0;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-top: 17px solid #ffd700;
  top: 6px;
  left: -10px;
}

.stick-heart {
  width: 20px;
  height: 18px;
  background: #ff69b4;
  position: relative;
  transform: translateX(-50%) rotate(45deg);
}

.stick-heart::before,
.stick-heart::after {
  content: '';
  width: 20px;
  height: 18px;
  background: #ff69b4;
  border-radius: 50%;
  position: absolute;
}

.stick-heart::before {
  left: -10px;
}

.stick-heart::after {
  top: -10px;
}

.stick-circle {
  width: 20px;
  height: 20px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  box-shadow: 0 0 15px rgba(102, 126, 234, 0.6);
}

@keyframes twinkle {
  0%, 100% { opacity: 1; transform: translateX(-50%) scale(1); }
  50% { opacity: 0.7; transform: translateX(-50%) scale(1.2); }
}

/* Candles */
.cake-candles {
  position: absolute;
  top: -60px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 30px;
}

.candle {
  position: relative;
  width: 12px;
  height: 50px;
  background: linear-gradient(180deg, #fff 0%, #ffe4e4 50%, #ffb6c1 100%);
  border-radius: 4px 4px 0 0;
  box-shadow: 0 2px 10px rgba(255, 182, 193, 0.5);
}

.candle-wick {
  position: absolute;
  top: -8px;
  left: 50%;
  transform: translateX(-50%);
  width: 2px;
  height: 8px;
  background: #333;
}

.candle-flame {
  position: absolute;
  top: -25px;
  left: 50%;
  transform: translateX(-50%);
  width: 15px;
  height: 20px;
  background: radial-gradient(ellipse at center, #fff 0%, #ffff00 20%, #ff6600 60%, transparent 100%);
  border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
  animation: flicker 0.3s ease-in-out infinite alternate;
  box-shadow: 0 0 20px #ff6600, 0 0 30px #ff6600;
}

@keyframes flicker {
  0% { transform: translateX(-50%) scaleY(1); }
  100% { transform: translateX(-50%) scaleY(0.95); }
}

@keyframes sparkle {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

@media (max-width: 1024px) {
  .initial-layout {
    flex-direction: column;
    gap: 2.5rem;
    max-width: 100%;
  }
  
  .initial-left {
    max-width: 100%;
  }
  
  .initial-right {
    order: -1;
  }
  
  .initial-photo-card {
    width: 160px;
    height: 200px;
  }
  
  .handwritten-title {
    white-space: normal;
  }
  
  .volume-indicator {
    max-width: 90%;
  }
}

@media (max-width: 768px) {
  .screen--initial {
    padding: 1.5rem;
  }
  
  .initial-layout {
    gap: 2rem;
    padding: 0 1rem;
  }
  
  .initial-photo-card {
    width: 140px;
    height: 180px;
  }
  
  .pixel-cake {
    width: 160px;
    height: 200px;
  }
  
  .handwritten-title {
    font-size: clamp(1.6rem, 5vw, 2.4rem);
    white-space: normal;
  }
  
  .volume-indicator {
    bottom: 2rem;
  }
  
  .volume-text {
    font-size: 1.1rem;
  }
}

@media (max-width: 768px) {
  .table-scene {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding-top: 1rem;
  }

  .cake-3d {
    position: relative;
    right: auto;
    top: auto;
    transform: none;
    width: 260px;
